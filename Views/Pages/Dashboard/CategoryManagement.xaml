<Page x:Class="Capybook.Views.Pages.Dashboard.CategoryManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Capybook.Views.Pages.Dashboard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryManagement">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource title}" VerticalAlignment="Center">Book Management</TextBlock>
        <ListView Grid.Row="1" HorizontalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID"></GridViewColumn>
                    <GridViewColumn Header="Title"></GridViewColumn>
                    <GridViewColumn Header="Stranlator"></GridViewColumn>
                    <GridViewColumn Header="Author"></GridViewColumn>
                    <GridViewColumn Header="Publisher"></GridViewColumn>
                    <GridViewColumn Header="Publication Year"></GridViewColumn>
                    <GridViewColumn Header="isbn"></GridViewColumn>
                    <GridViewColumn Header="Description"></GridViewColumn>
                    <GridViewColumn Header="Dimension"></GridViewColumn>
                    <GridViewColumn Header="HardCover"></GridViewColumn>
                    <GridViewColumn Header="Weight"></GridViewColumn>
                    <GridViewColumn Header="Status"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="2" Background="DeepSkyBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>

                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                    <Label Style="{StaticResource lable}">Category Name</Label>
                    <TextBox Style="{StaticResource textbox}" ></TextBox>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3">
                    <Label Style="{StaticResource lable}">Parent Category</Label>
                    <ComboBox></ComboBox>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="3">
                    <Label Style="{StaticResource lable}">Status</Label>
                    <ComboBox></ComboBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Style="{StaticResource btn}" Background="GreenYellow" Grid.Row="0" >Add</Button>
                <Button Style="{StaticResource btn}" Background="GhostWhite" Grid.Row="1" >Modify</Button>
                <Button Style="{StaticResource btn}" Background="Red" Grid.Row="2" >Delete</Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
