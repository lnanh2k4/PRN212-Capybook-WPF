<Page x:Class="Capybook.Views.Pages.Homepage.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Capybook.Views.Pages.Homepage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login" Background="WhiteSmoke">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock Style="{StaticResource title}">Login</TextBlock>
            <Label Style="{StaticResource lable}" HorizontalAlignment="Left">Username</Label>
            <TextBox></TextBox>
            <Label Style="{StaticResource lable}" HorizontalAlignment="Left">Password</Label>
            <TextBox></TextBox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLogin" Style="{StaticResource btn}" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0" VerticalAlignment="Stretch" Click="btnLogin_Click" HorizontalAlignment="Left">Login</Button>
                <Button Grid.Column="2" x:Name="btnRegister" Style="{StaticResource btn}" Content="Register" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="btnRegister_Click"/>
            </Grid>

        </StackPanel>
    </Grid>
</Page>
